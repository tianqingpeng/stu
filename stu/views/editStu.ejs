<%- include header.ejs %>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">确认删除此信息？</h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary">确认</button>
      </div>
    </div>
  </div>
</div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <form role="form" method="post">
          <div class="form-group">
            <h2>修改信息</h2>
          </div>

          <div class="form-group">
            <table class="table table-condensed">
              <tr><td>姓名</td><td>编号</td><td></td></tr>
              <% for(var i = 0; i < result.length; i++) { %>
              <tr>
                <td><input type="text" class="form-control"  name="name" value=<%= result[i].name %>></td>
                <td><input type="text" class="form-control"  name="stuId" value=<%= result[i].stuId %>></td>
                <td>
                   <input hidden type="text"  name="stu_id" value=<%= result[i]._id%>>
                   <input type="radio" name="num" value=<%=i %>>
                </td>
              </tr>
              <% } %>
              <tr><td><button type="submit" id="editBtn" class="btn btn-success" data-toggle="modal" data-target="#myModal">确认</button></td></tr>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>

<%- include footer.ejs %>
